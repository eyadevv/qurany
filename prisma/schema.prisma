generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
}

model surah {
  name     String
  id       Int    @id @default(autoincrement())
  ayahs    Int
  qariId   Int
  place    String
  qariName String
  qari     qari   @relation(fields: [qariId, qariName], references: [id, name])
}

model qari {
  id          Int     @id @default(autoincrement())
  name        String
  image       String
  surahsCount Int
  country     String
  surahs      surah[]

  @@unique([id, name])
}
