datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Surah {
  id        Int @id @default(autoincrement())
  name      String
  arabicName String
  place     String
  ayahs     Int
  qari    Qari  @relation(fields: [qariId], references: [id])
  qariId  Int
}

model Qari {
  id    Int     @id @default(autoincrement())
  name String  @unique
  arabicName  String
  image String
  country String
  surahs Surah[]
}
model User {
  id    Int     @id @default(autoincrement())
  name String  @unique
  email String @unique
  password String
  role String @default("USER")
}
