generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Surah {
  name     String
  id       Int    @id @default(autoincrement())
  ayahs    Int
  place    String
  qariId   Int
  qariName String
  qari     qari   @relation(fields: [qariId, qariName], references: [id, name])
}

model qari {
  id          Int     @id @default(autoincrement())
  name        String
  image       String
  surahsCount Int
  country     String
  surahs      Surah[]

  @@unique([id, name])
}
